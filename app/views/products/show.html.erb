<div class="container py-5">
  <div class="row">
    <div class="col-md-6">
      <div style="height: 400px; background: #f8f9fa;" class="rounded"></div>
    </div>
    <div class="col-md-6">
      <%= link_to "â† Back to shop", root_path, class: "text-decoration-none text-muted mb-3 d-block" %>
      <h1 class="mb-3"><%= @product.name %></h1>
      <p class="text-muted mb-2"><%= @product.category %></p>
      <p class="mb-4"><%= @product.description %></p>
      <% if @variants.any? %>
        <div class="mb-3">
          <label class="form-label fw-semibold">Variant</label>
          <select class="form-select" id="variant-select">
            <% @variants.each do |variant| %>
              <option value="<%= variant.id %>">
                <%= variant.size %> / <%= variant.color %> - <%= number_to_currency(variant.price) %>
              </option>
            <% end %>
          </select>
        </div>
        <h2 class="mb-4"><%= number_to_currency(@selected_variant.price) %></h2>
        <% if user_signed_in? %>
          <%= button_to "Add to Cart", "#", class: "btn btn-dark btn-lg w-100" %>
        <% else %>
          <%= link_to "Login to Buy", new_user_session_path, class: "btn btn-dark btn-lg w-100" %>
        <% end %>
      <% else %>
        <button class="btn btn-secondary btn-lg w-100" disabled>No variants available</button>
      <% end %>
      <p class="text-muted small mt-3">Sold by: <%= @product.user.email %></p>
    </div>
  </div>
</div>
