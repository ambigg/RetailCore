<div class="container py-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h2 fw-light"><%= @product.name %></h1>
    <%= link_to inventory_products_path, class: "btn btn-outline-secondary" do %>
      <i class="bi bi-arrow-left"></i> Back
    <% end %>
  </div>
  <p><%= @product.description %></p>
  <p><strong>Category:</strong> <%= @product.category %></p>
  <p><strong>Status:</strong> <%= @product.active? ? "Active" : "Inactive" %></p>
  <div class="d-flex gap-2 mb-4">
    <%= link_to "Edit", edit_inventory_product_path(@product), class: "btn btn-outline-primary" %>
    <%= button_to "Delete", inventory_product_path(@product), method: :delete,
        data: { turbo_confirm: "Are you sure?" }, class: "btn btn-outline-danger" %>
  </div>
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h3>Variants</h3>
    <%= link_to "Add Variant", new_inventory_product_product_variant_path(@product), class: "btn btn-success" %>
  </div>
  <% if @product.product_variants.any? %>
    <table class="table">
      <thead>
        <tr>
          <th>SKU</th>
          <th>Color</th>
          <th>Size</th>
          <th>Material</th>
          <th>Price</th>
          <th>Stock</th>
          <th colspan="2">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @product.product_variants.each do |variant| %>
          <tr>
            <td><%= variant.sku %></td>
            <td><%= variant.color %></td>
            <td><%= variant.size %></td>
            <td><%= variant.material %></td>
            <td><%= number_to_currency(variant.price) %></td>
            <td><%= variant.stock %></td>
            <td><%= link_to "Edit", edit_inventory_product_product_variant_path(@product, variant) %></td>
            <td><%= link_to "Delete", inventory_product_product_variant_path(@product, variant),
                data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p class="text-secondary">No variants yet.</p>
  <% end %>
</div>
