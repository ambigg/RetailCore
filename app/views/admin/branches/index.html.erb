<div class="container py-4">
  <div class="d-flex justify-content-between align-items-center mb-5">
    <h1 class="h2 fw-light">My Branches</h1>
    <%= link_to new_admin_branch_path, class: "btn btn-outline-dark rounded-pill px-4 d-flex align-items-center gap-2" do %>
      <i class="bi bi-plus-lg"></i> Add Branch
    <% end %>
  </div>
  <% if @branches.any? %>
    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Location</th>
          <th>Phone</th>
          <th colspan="3">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @branches.each do |branch| %>
          <tr>
            <td><%= branch.name%></td>
            <td><%= branch.address%></td>
            <td><%= branch.phone%></td>
            <td><%= link_to "Show", admin_branch_path(branch) %></td>
            <td><%= link_to "Edit", edit_admin_branch_path(branch) %></td>
            <td><%= link_to "Delete", admin_branch_path(branch),
                data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <div class="text-center py-5">
      <i class="bi bi-inbox display-1 text-secondary"></i>
      <p class="lead text-secondary mt-3">You don't have any branches yet.</p>
      <%= link_to new_admin_branch_path, class: "btn btn-dark rounded-pill px-4 mt-2" do %>
        <i class="bi bi-plus-lg me-2"></i>Create first Branch
      <% end %>
    </div>
  <% end %>
</div>
