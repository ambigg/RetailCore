<table class="table">
  <thead>
    <tr>
      <th>Email</th>
      <th>Role</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.role.humanize %></td>
        <td><%= link_to "Show", admin_user_path(user) %></td>
        <td><%= link_to "Edit", edit_admin_user_path(user) %></td>
        <td><%= button_to "Delete", admin_user_path(user), method: :delete,
            data: { turbo_confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
